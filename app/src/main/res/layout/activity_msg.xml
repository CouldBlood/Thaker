<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context="net.source_code.thaker.MSG">

    <LinearLayout

        android:background="@color/ColorPrimary"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:elevation="6dp"
        android:layout_gravity="center"
        android:orientation="vertical"
        android:id="@+id/linearLayout"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="   ذكّر"
            android:id="@+id/textView"
            android:textColor="#f4ffff"
            android:textSize="40dp"
            android:layout_gravity="right" />

    </LinearLayout>

    <LinearLayout
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:paddingTop="10dp"
        android:paddingBottom="20dp"

        android:orientation="vertical"
        android:elevation="10dp"
        android:layout_width="match_parent"
        android:layout_height="345dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/linearLayout">

        <LinearLayout

            android:paddingLeft="20dp"
            android:paddingRight="50dp"
            android:paddingTop="10dp"


            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="169dp"
            android:background="@color/ColorPrimary"
            android:id="@+id/linearLayout2"
           >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="أستغفر الله"
                android:id="@+id/textView4"
                android:layout_gravity="right"
                android:textColor="#ffffff"
                android:textSize="30dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="الحمد لله "
                android:id="@+id/textView5"
                android:layout_gravity="right"
                android:textSize="30dp"
                android:textColor="#ffffff" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="سبحان الله"
                android:id="@+id/textView6"
                android:layout_gravity="right"
                android:textColor="#ffffff"
                android:textSize="30dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="الله أكبر"
                android:id="@+id/textView7"
                android:layout_gravity="right"
                android:textSize="30dp"
                android:textColor="#ffffff" />
        </LinearLayout>

        <RelativeLayout
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:paddingTop="@dimen/activity_vertical_margin"
            android:paddingBottom="@dimen/activity_vertical_margin"

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/relativeLayout2"
            android:layout_centerVertical="true"
            android:layout_alignParentStart="true">

            <Button

                android:layout_width="300dp"
                android:layout_height="50dp"
                android:text="حسنًا"
                android:id="@+id/done"
                android:textSize="30dp"
                android:background="@drawable/done_states"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:id="@+id/textView18"
                android:layout_below="@+id/done"
                android:layout_centerHorizontal="true" />

            <Button
                android:layout_width="wrap_content"
                android:background="@drawable/stop2_states"
                android:layout_height="wrap_content"
                android:text="إيقاف"
                android:id="@+id/stop2"
                android:layout_below="@+id/textView18"
                android:textSize="30dp"
                android:layout_alignStart="@+id/done"
                android:layout_alignEnd="@+id/done" />
        </RelativeLayout>
    </LinearLayout>


</RelativeLayout>
