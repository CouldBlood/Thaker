<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context="net.source_code.thaker.info">


    <Button
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:text="حول التطبيق"
        android:id="@+id/about_2"
        android:elevation="30dp"
        android:background="#5199f8"
        android:textColor="#ffffff"
        android:textSize="30dp"
        android:layout_below="@+id/textView13"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:text="أقترح او أبلغ عن مشكلة"
        android:elevation="30dp"
        android:id="@+id/Feedback"
        android:background="#5199f8"
        android:textColor="#ffffff"
        android:textSize="25dp"
        android:typeface="normal"
        android:layout_below="@+id/textView10"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:id="@+id/textView10"
        android:layout_below="@+id/about_2"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:id="@+id/textView11"
        android:layout_below="@+id/Feedback"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="300dp"
        android:layout_height="50dp
        "
        android:text="تقييم التطبيق"
        android:id="@+id/button"
        android:layout_below="@+id/textView11"
        android:layout_centerHorizontal="true"
        android:textSize="30dp"
        android:textColor="#ffffff"
        android:background="#5199f8" />

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:background="@color/ColorPrimary"
        android:id="@+id/frameLayout">

        <Button
            style="?android:attr/buttonStyleSmall"
            android:background="@drawable/settings_50"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:id="@+id/button2"
            android:layout_gravity="right|center_vertical"
            android:layout_alignBottom="@+id/textView14"
            android:layout_alignParentEnd="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text=" خيارات"
            android:id="@+id/textView14"
            android:layout_gravity="right|center_vertical"
            android:textColor="#ffffff"
            android:textSize="20dp"
            android:layout_centerVertical="true"
            android:layout_toStartOf="@+id/button2" />

        <Button
            style="?android:attr/buttonStyleSmall"
            android:background="@drawable/return_50"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:id="@+id/return_01"
            android:layout_gravity="left|center_vertical"
            android:layout_alignTop="@+id/button2"
            android:layout_toEndOf="@+id/textView16" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="   "
            android:id="@+id/textView16"
            android:layout_centerVertical="true"
            android:layout_alignParentStart="true" />
    </RelativeLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:id="@+id/textView13"
        android:layout_below="@+id/frameLayout"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
